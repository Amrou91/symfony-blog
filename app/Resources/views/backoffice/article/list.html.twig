{% extends 'backoffice/layout-backoffice.html.twig' %}

{% block body %}
    <div class="col-lg-10 bg-grey ml-md-auto">

        div.
        <a class="btn btn-dark" href="{{ path('article_create') }}">Nouvel article</a>

        {% if articles is not empty %}
            <table class="table">
                <thead class="thead-inverse">
                <th>id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th>Date poste</th>
                <th>Commentaire</th>
                <th>Actions</th>
                </thead>

                <tbody>
                {% for article in articles %}
                    <tr>
                        <th scope="row">{{ article.id }}</th>
                        <td>{{ article.title }}</td>
                        <td>{{ article.author.username }}</td>
                        <td>{{ article.createAt|date("d/m/Y") }}</td>
                        <td>/</td>
                        <td>/</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <i>Pas d'article</i>
        {% endif %}
    </div>
{% endblock %}
