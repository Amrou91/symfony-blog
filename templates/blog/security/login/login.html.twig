{% extends 'blog/layout-blog.html.twig' %}

{% block security %}
    <div class="security-container">
        <div class="login">
            <h1 class="title is-3">Connexion</h1>
            <div class="border-form">
                {% include('blog/security/login/_login_form.html.twig') %}
                <div class="login-subtitle">
                    <div class="mb-10">
                        Connectez vous avec :
                        <a href="{{ path('login_github') }}">
                            <i class="fa fa-github fa-2x" aria-hidden="true"></i>
                        </a>
                    </div>

                    <a href="{{ path('password_reset_request') }}">Mot de passe oublié ?</a><br/>
                    Pas encore inscrit ? <a href="{{ path('registration') }}">Créer un compte</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
