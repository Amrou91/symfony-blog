{{ form_start(form, {'attr': {'id': 'registration-form'}}) }}
    {{ form_errors(form) }}
        <div class="field">
            {{ form_label(form.username, 'Identifiant', {'label_attr': {'class': 'label has-text-left'}}) }}
            <div class="control has-icons-left">
                {{ form_widget(form.username, {'attr': {'class': 'input', 'placeholder': 'johnDoe'}}) }}
                <span class="icon is-small is-right">
                    <i class="fa fa-user" aria-hidden="true"></i>
                </span>
            </div>
            <div class="help is-danger has-text-left">
                {{ form_errors(form.username) }}
            </div>
        </div>

        <div class="field">
            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'label has-text-left'}}) }}
            <div class="control has-icons-left">
                {{ form_widget(form.email, {'attr': {'class': 'input', 'placeholder': 'you@mail.com'}}) }}
                <span class="icon is-small is-right">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                </span>
            </div>
            <div class="help is-danger has-text-left">
                {{ form_errors(form.email) }}
            </div>
            </div>

        <div class="field">
            {{ form_label(form.plainPassword.first, 'Mot de passe', {'label_attr': {'class': 'label has-text-left'}}) }}
            <div class="control has-icons-left">
                {{ form_widget(form.plainPassword.first, {'attr': {'class': 'input', 'placeholder': 'strong password'}}) }}
                <span class="icon is-small is-right">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </span>
            </div>
        </div>

        <div class="field">
            {{ form_label(form.plainPassword.second, 'Répétez le mot de passe', {'label_attr': {'class': 'label has-text-left'}}) }}
            <div class="control has-icons-left">
                {{ form_widget(form.plainPassword.second, {'attr': {'class': 'input', 'placeholder': 'repeat it'}}) }}
                <span class="icon is-small is-right">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                </span>
            </div>
            <div class="help is-danger has-text-left">
                {{ form_errors(form.plainPassword.first) }}
            </div>
        </div>

        <button type="submit" class="button is-large is-primary is-fullwidth">Inscription</button>
{{ form_end(form) }}
